extends  archivoBase


block contenido
    .contenido-principal
        h1 #{nombrePagina}

        if error
            each arreglo in error
                .alerta= arreglo.errorTexto

        form.agregar-proyecto(action="/nueva-actividad" method="POST")
            .campo
                label(for="Nombre") Nombre:
                input(type="text" id="nombre" name="nombre" placeholder="Nombre actividad")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")