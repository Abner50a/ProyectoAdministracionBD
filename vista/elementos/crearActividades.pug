mixin crearActividades(actividades = {})
    form.agregar-proyecto(action=`/nueva-actividad/${actividades.id || ''}` method="POST")
            .campo
                label(for="Nombre") Nombre:
                input(value=actividades.nombre type="text" id="nombre" name="nombre" placeholder="Nombre actividad")
            .campo.enviar
                input(type="submit" value=`${actividades.nombre ? 'Actualizar Nombre' : 'Agregar'}` class="boton")